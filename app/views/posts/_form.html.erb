<%= simple_form_for @post, html: {multipart: true} do |f| %>
  <%= f.error_notification %>  <!-- 에러 메시지 -->
  <%= f.input :title %>
  <%= f.input :content, class: "tinymce", rows: 40, cols: 120 %>
  <%= tinymce %>
  <!-- <input type="file" name="img" /> -->
  <%= f.input :img %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>



