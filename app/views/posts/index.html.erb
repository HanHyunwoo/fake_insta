
<%= link_to '글쓰기', new_post_path, class: "btn btn-warning" %>
<!-- <a href="/posts/new">글 쓰러가기</a> -->

<% @posts.each do |post| %>
  <% unless post.user.nil? %> 
    <p>작성자 : <%= post.user.email %> </p>
  <% end %>
  <p>아이디 : <%= post.id %></p>
  <p>제목 : <%= post.title %></p>
  <p>내용 : <%= post.content %></p>
  <%= link_to '글보기', post, class: "btn btn-primary" %>
  <!-- <a href="/posts/<%=post.id%>">글 보러가기</a> -->
  <hr />
<% end %>

<!-- <div class="" -->
<%= paginate @posts %>
